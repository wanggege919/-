.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  opacity: 0.6;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 175rpx;
}

.author-date {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.author-date .avatar {
  width: 64rpx;
  height: 64rpx;
}


.author-date .author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.author-date .const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.author-date .date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}


.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.tool .circle-img {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 40rpx;
}

.tool .circle-img image {
  width: 90rpx;
  height: 90rpx;
}

.tool .circle-img .share-img {
  margin-left: 30rpx;
}

.tool .horizon {
  width: 660rpx;
  height: 1px;
  background: #e5e5e5;
  position: relative;
  top: -45rpx;
  z-index: -1;
  margin: 0 auto;
}

.detail {

  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}